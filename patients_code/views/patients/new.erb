<h2>ENTER NEW PATIENT'S DETAILS</h2>
<form method="POST" action="/patients">

  <label for="first-name">First Name:</label>
  <input type="text" name="first_name" id="first-name"/>



  <label for="second_name">Second Name:</label>
  <input type="text" name="second_name" id="second-name"/>



  <label for="dob">Date of Birth:</label>
  <input type="text" name="dob" id="dob"/>



  <label for="age">Enter Current Age:</label>
  <input type="number" name="age" id="age"/>



  <label for="gender-select">Select Gender:</label>
  <select id="gender-select" name="gender">
    <option value="Male">Male</option>
    <option value="Female">Female</option>
  </select>



  <label for="profession">Profession:</label>
  <input type="text" name="profession" id="profession"/>

  <input type='submit' value='Create New Patient Record' />

</form>
