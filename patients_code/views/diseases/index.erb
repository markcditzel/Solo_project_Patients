    </tr>

    <% for disease in @diseases %>
    <tr>
      <td><%= disease.id%></td>
      <td>||</td>
      <td><a href="/diseases/<%=disease.common_name %>"><%= disease.common_name%></a></td>
      <td>||</td>
      <td><%= disease.latin_name %></td>
      <td>||</td>
      <td><%= disease.disease_agent_class %></td>
      <td>||</td>
      <td><%= disease.organs_affected %></td>
      <td>||</td>
      <td><%= disease.severity_index %></td>
      <td>||</td>
    </tr>
    <% end %>
  </table>
